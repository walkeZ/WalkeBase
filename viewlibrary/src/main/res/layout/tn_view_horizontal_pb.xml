<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="38dp">

    <ProgressBar
        android:id="@+id/tvhp_pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="2dp"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:background="@drawable/tn_progress_bg"
        android:max="100"
        android:progress="90"
        android:progressDrawable="@drawable/tn_progress_foreground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tvhp_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/tvhp_p1Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="倒计时 12：58"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/tvhp_p2LL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvhp_p2TvTips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前次数"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvhp_p2TvNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 3"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvhp_p2TvUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/6 组"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:visibility="visible" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
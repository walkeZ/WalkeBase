<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/blueSky">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/snowfall_small"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="小雪"
            android:textSize="18sp"
            android:gravity="center"/>
        <Button
            android:id="@+id/snowfall_middle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="中雪"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/snowfall_big"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="大雪"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <walke.viewlibrary.snowfall.SnowView
        android:id="@+id/snowfall_snowView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <walke.viewlibrary.snowfall.Snow2View
        android:id="@+id/snowfall_snow2View"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="6dp"
        android:background="#d164fd7e"/>


</LinearLayout>